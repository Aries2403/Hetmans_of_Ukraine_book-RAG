FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt ./
RUN pip3 install --no-cache-dir -r requirements.txt

COPY app.py config.py rag_hetmans.py ./
COPY src/ ./src/
COPY images/ ./images/
COPY data/ ./data/

RUN echo "‚úÖ –§–∞–π–ª–∏ –≥–æ—Ç–æ–≤—ñ" && \
    echo "üìÅ –¢–µ–∫—Å—Ç–æ–≤—ñ —Ñ–∞–π–ª–∏:" && \
    ls /app/data/hetman_files/*.txt | wc -l && \
    echo "üñºÔ∏è –§–æ—Ç–æ:" && \
    find /app/images/hetmans -type f | wc -l

EXPOSE 8501

HEALTHCHECK CMD curl --fail http://localhost:8501/_stcore/health

ENTRYPOINT ["sh", "-c", "python rag_hetmans.py && streamlit run app.py --server.port=8501 --server.address=0.0.0.0"]
